# Notion API token - get this from https://www.notion.so/my-integrations
NOTION_TOKEN=

# Comma-separated list of database IDs to monitor (no spaces)
NOTION_DATABASE_IDS=database_id1,database_id2

# Cron schedule for checking (default: every hour)
# Format: minute hour day_of_month month day_of_week
# '0 * * * *' = every hour at minute 0
CHECK_INTERVAL_CRON=0 * * * *

# Port for the web server
PORT=3000


